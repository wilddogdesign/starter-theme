{% if objectFit == 'auto' %}
  {% set objectFit = image.autop__image_position ?: 'center' %}
{% endif %}
{% if objectFit and objectFit != 'center' %}
  {% set object_position = 'u-object-fit u-object-position--'~objectFit %}
{% elseif objectFit %}
  {% set object_position = 'u-object-fit u-object-position' %}
{% endif %}

<img
  {% if id %}
    id="{{ id }}"
  {% endif %}

  {% if sizes %}
    src="{{ image.src|resize(32,32,(objectFit)) }}"
    data-srcset="
      {% for size in sizes %}
        {{ image.src|resize(size,0,(objectFit)) }} {{ size }}w{{ loop.last ? '' : ',' }}
      {% endfor %}
    "
    data-sizes="auto"
  {% else %}
    src="{{ image.src }}"
  {% endif %}

  alt="{{ image.alt ?: image.title }}"
  class="{{ imageClasses }} {{ object_position }}{{ sizes ? ' lazyload' : '' }}"

  {% if gallery %}
    data-pswp="{{ gallery }}"
    data-pswp-src="{{ image.src }}"
    data-pswp-size="{{ image.width }}x{{ image.height }}"
    data-pswp-title="{{ image.title ?: image.alt }}"
    data-pswp-credit="{{ image.credit ?: image.caption }}"
  {% endif %}
 />
